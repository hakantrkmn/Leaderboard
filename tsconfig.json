{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "./Scripts/dist",
    "rootDir": "./Scripts/src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "Scripts/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "Scripts/dist"
  ]
}