      "id": 1,
      "type": "timeseries",
      "title": "HTTP Request Rate",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum by (method, path, status_code) (rate(http_requests_total[5m]))",
          "legendFormat": "{{method}} {{path}} {{status_code}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisLabel": "",
            "axisPlacement": "auto",
